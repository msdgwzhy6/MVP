<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
tools:context=".MainActivity">

   <TextView
       android:layout_marginTop="40dp"
        android:id="@+id/txv_name"
        android:text="用户名："
        android:layout_width="60dp"
        android:layout_height="wrap_content"
 />
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"

        android:layout_toRightOf="@id/txv_name"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@id/txv_name"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txv_pass"
        android:layout_below="@id/txv_name"
        android:text="密码："
        android:layout_marginTop="60dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edit_pass"
        android:layout_width="match_parent"

        android:layout_alignLeft="@id/edit_name"
        android:layout_alignTop="@id/txv_pass"
        android:layout_toRightOf="@id/txv_pass"
        android:layout_height="wrap_content" />
<Button
    android:id="@+id/btn"
    android:layout_width="wrap_content"
    android:layout_below="@id/txv_pass"
    android:layout_marginTop="20dp"
    android:text="登录"
    android:layout_centerHorizontal="true"
    android:layout_height="50dp" />
    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/txv_info"
        android:layout_below="@id/btn"
        android:text="相关信息："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
